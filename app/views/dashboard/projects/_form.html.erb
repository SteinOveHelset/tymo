<div class="flex flex-col">
    <%= form.label :client %>
    <%= form.collection_select :client_id, @clients, :id, :title, { prompt: 'Select a client' }, { class: 'w-full mt-2 py-4 px-6 rounded-2xl' } %>
    <% @project.errors.full_messages_for(:client_id).each do |message| %>
        <div class="px-6 py-4 mt-2 rounded-2xl bg-[#e45c34]"><%= message %></div>
    <% end %>
</div>

<div class="flex flex-col">
    <%= form.label :title %>
    <%= form.text_field :title, class: "w-full mt-2 py-4 px-6 rounded-2xl" %>
    <% @project.errors.full_messages_for(:title).each do |message| %>
        <div class="px-6 py-4 mt-2 rounded-2xl bg-[#e45c34]"><%= message %></div>
    <% end %>
</div>

<div class="flex flex-col">
    <%= form.label :budget %>
    <%= form.text_field :budget, class: "w-full mt-2 py-4 px-6 rounded-2xl" %>
    <% @project.errors.full_messages_for(:budget).each do |message| %>
        <div class="px-6 py-4 mt-2 rounded-2xl bg-[#e45c34]"><%= message %></div>
    <% end %>
</div>

<div class="flex flex-col">
    <%= form.label :description %>
    <%= form.text_area :description, class: "w-full min-h-80 mt-2 py-4 px-6 rounded-2xl" %>
    <% @project.errors.full_messages_for(:description).each do |message| %>
        <div class="px-6 py-4 mt-2 rounded-2xl bg-[#e45c34]"><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.submit 'Submit', class: "py-4 px-6 bg-[#5e8c75] hover:bg-[#3c5e4d] transition cursor-pointer text-white rounded-2xl" %>
</div>